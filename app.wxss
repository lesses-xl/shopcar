.swiper-img {
	width: 100%;
	height: 360rpx;
}

.citypickers{
  position: fixed;
  height: 100%;
  width: 100%;
  min-height: 100%;
  background-color: red;
}

.citybody {
  position: fixed;
  bottom: 0px;
}

.cityheader {
  position: absolute;
  top:0px;
  width: 100%;
  z-index: 4;
}

.city-cancel {
  float: left;
  margin: 20rpx;
  color: #818181;
}

.city-true {
  float: right;
  margin: 20rpx;
  color: #2FB42E
}

.section .picker {
  background-color: #fff;
  border-bottom: 1px #d9d9d9 solid;
  border-top: 1px #d9d9d9 solid;
  padding: 20rpx;
}

.swiper-tab{  
    width: 100%;  
    /* border-bottom: 5rpx solid rgba(238,238,238,1);   */
    text-align: center;  
    line-height: 80rpx;
}  

.swiper-tab-list{  
    font-size: 30rpx;  
    display: inline-block;  
    width: 33.33%;  
    color: #777777;  
    /* box-sizing: borde-box; */
    border-bottom: 6rpx solid rgba(238,238,238,1); 
    transition: all .3s;
}  

.on{ 
    color: #da7c0c;  
    border-bottom: 6rpx solid #da7c0c;
}  
  
.swiper-box{ 
    display: block;
    /* height: 100%;  */
    width: 100%; 
    overflow: hidden; 
    font-size: 26rpx;
    box-sizing: border-box;
    padding: 20rpx;
}  
.swiper-box view{  
    text-align: center;  
}  

.flex {
  display: flex;
  justify-content: center;
  align-items: center;
}

.new-goods {
  width: 95%;
  height: auto;
  margin: 0 auto;
}

.new-goods-one {
  width: 350rpx;
  height: 350rpx;
  float: left;
  text-align: center;
  background: rgb(246, 246, 246);
  margin-bottom: 15rpx;
  /* margin-right: 10rpx; */
}

.new-goods-one image {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  border-radius: 50%;
  display: block;
  margin-top: 25rpx;
  margin-bottom: 10rpx;
}

.new-goods-one text {
  width: 200rpx;
  height: 50rpx;
  font-size: 26rpx;
  text-align: center;
  display: block;
  margin: 5rpx auto;
}

.new-goods-one:nth-of-type(even) {
  float: right;
}
