		<text>绑定手机号码</text>
		<image class='my-list-img' src='../../images/arrow-right.png'></image>
	</view>
	<view class='my-border'></view>
	<view class='my-list' style='border-bottom: none'>
		<text>清除缓存</text>
	</view>
	<view class='my-border'></view>
