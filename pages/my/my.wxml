<view class='my-container'>
	<view class='userBanner'>
		<image class="userinfo-img" src="../../images/gou-red.png" background-size="cover"></image>
		<text class="userinfo-name">测试测试测试</text>
	</view>	
	<view class='my-border'></view>
	<view class='my-list' bindtap='showMyOrder'>
