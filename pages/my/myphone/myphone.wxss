.myphone {
	margin: 20rpx 0;
}

.phone {
	position: relative;
	width: 600rpx;
	height: 85rpx;
	border: 1px solid #dfdfdf;
	border-radius: 10rpx;
	display: flex;
	margin: 0 auto;
	margin-bottom: 20rpx;
	font-size: 28rpx;
}

.phone input {
	width: 320rpx;
	height: 85rpx;
	margin-left: 20rpx;
	line-height: 85rpx;
	font-size: 26rpx;
}

.phone text {
	font-size: 28rpx;
	line-height: 85rpx;
	margin-left: 20rpx;
	padding-right: 10rpx;
}

.borderright {
	width: 2rpx;
	height: 30rpx;
	background: black;
	margin-top: 30rpx;
}

.phone button {
	position: absolute;
	width: 160rpx;
	height: 50rpx;
	font-size: 20rpx;
	top: 18rpx;
	right: 10rpx;
	background: white;
}

.bindphone {
	width: 500rpx;
	height: 70rpx;
	line-height: 70rpx;
	font-size: 26rpx;
}