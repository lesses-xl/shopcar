.star-wrap {
	width: 96%;
	height: auto;
	margin: 0 auto;
	padding: 20rpx 0 40rpx 0;
}

.star-list {
	width: 46%;
	height: 400rpx;
	background: rgba(233, 233, 233, 0.6);
	border-radius: 10rpx;
	display: inline-block;
	margin: 20rpx 1.5% 20rpx 2.1%;
	box-shadow: 2rpx 2rpx 5rpx rgba(22,22,22,0.2);
	position: relative;
}

