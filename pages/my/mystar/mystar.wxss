}

.star-list text {
	width: 100%;
	display: block;
	background: white;
	font-size: 28rpx;
	height: 45rpx;
	line-height: 45rpx;
	margin-top: -5rpx;
	box-sizing: border-box;
	padding: 0 20rpx;
