.star-wrap {
	width: 96%;
	height: auto;
	margin: 0 auto;
	padding: 20rpx 0 40rpx 0;
}

.star-list {
	width: 46%;
	height: 420rpx;
	background: rgba(233, 233, 233, 0.6);
	border-radius: 10rpx;
	display: inline-block;
	margin: 20rpx 1.5% 20rpx 2.1%;
	box-shadow: 2rpx 2rpx 5rpx rgba(22,22,22,0.2);
	position: relative;
}

.star-bottom {
	width: 100%;
	background: white;
	height: 105rpx;
}

.star-list .star-del {
	width: 45rpx;
	height: 45rpx;
	position: absolute;
	top: 5rpx;
	right: 5rpx;
}

.star-list image {
	width: 100%;
	height: 310rpx;
	border-top-left-radius: 10rpx;
	border-top-right-radius: 10rpx;

}

.star-list .star-name {
	font-size: 24rpx;
	width: 100%;
	height: 60rpx;
	line-height: 30rpx;
	padding: 10rpx;
}

.star-list .star-price {
	font-size: 26rpx;
	width: 100%;
	height: 40rpx;
	line-height: 40rpx;
	padding: 10rpx;
}

.star-list text {
	width: 100%;
	display: block;
	background: white;
	font-size: 28rpx;
	height: 45rpx;
	line-height: 45rpx;
	margin-top: -5rpx;
	box-sizing: border-box;
	padding: 0 20rpx;
}

.no-star {
	width: 100%;
	height: 320rpx;
	text-align: center;
	font-size: 26rpx;
	padding-top: 150rpx;
}

.no-star button {
	font-size: 24rpx;
	width: 260rpx;
	margin-top: 50rpx;
	background: #AB956C;
	color: white;
}