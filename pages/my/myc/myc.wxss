page {
	width: 100%;
	height: 100%;
	background: rgba(244, 244, 244, 0.8);
}

.c-box {
	width: 100%;
	height: auto;
	box-sizing: border-box;
	padding: 15rpx 20rpx;
	text-align: center;
	margin: 0 auto;
}

.c-box-l {
	width: 95%;
	height: 160rpx;
	font-size: 23rpx;
	display: inline-block;
	margin: 2% 2%;
	box-sizing: border-box;
	border-radius: 5rpx;
	background: rgba(240, 168, 58,0.8);
	box-shadow: 1rpx 0rpx 1rpx rgba(0, 0, 0, 0.2);
	position: relative;
}

.c-box-l .c-rec {
	position: absolute;
	right: 15rpx;
	top: 0rpx;
	height: 100%;
	display: inline;
	width: 35rpx;
	line-height: 35rpx;
	font-size: 22rpx;
	padding-top: 50rpx;
	box-sizing: border-box;

}

.c-box-l text {
	width: 100%;
	height: 30rpx;
	display: block;
	line-height: 30rpx;
	text-align: left;
	box-sizing: border-box;
	padding-left: 17rpx;
	margin-bottom: 10rpx;
	margin-top: -5rpx;
	color: white;
}

.c-box-l text.c-price {
	height: 60rpx;
	line-height: 60rpx;
	font-size: 32rpx;
	box-sizing: border-box;
	padding-left: 15rpx;
	margin-bottom: 5rpx;
}