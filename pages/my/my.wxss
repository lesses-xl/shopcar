.userBanner {
	width: 100%;
	height: 190rpx;
	background: rgb(171,149,108);
	box-sizing: border-box;
	padding: 10rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	color: white;
}

.userinfo-img {
	width: 110rpx;
	height: 110rpx;
	background: skyblue;
	border: 2rpx solid white;
	/* margin-left: -220rpx; */
	display: block;
	border-radius: 50%;
}

.userinfo-name {
	width: 320rpx;
	height: 50rpx;
	/* text-align: center; */
	font-size: 16px;
	margin-left: 20rpx;
	display: block;
	margin-top: 10rpx;
}

.my-border {
	width: 100%;
	height: 5px;
	background: rgba(238,238,238,1);
}

.my-list {
	position: relative;
	width: 100%;
	height: 90rpx;
	padding: 15px;
	font-size: 14px;
	padding-right: 22px;
	box-sizing: border-box;
	text-align: center;
	line-height: 40rpx;
	color: rgb(207, 207, 207);
}

.my-list-img {
	width: 10px;
	height: 16px;
	float: right;
}

.add {
	color: rgb(171, 150, 111);
}

.aboutwe {
	width: 260rpx;
	height: 50rpx;
	padding-left: 135rpx;
	box-sizing: border-box;
}

.aboutwe image {
	width: 52rpx;
	height: 52rpx;
	float: left;
}

.aboutwe view {
	font-size: 26rpx;
	float: left;
	line-height: 50rpx;
}

.openid {
	text-align: center;
	font-size: 26rpx;
}

.changemobile {
	width: 100rpx;
	height: 90rpx;
	font-size: 20rpx;
	padding: 0 5rpx;
	position: absolute;
	right: 0rpx;
	top: 0rpx;
	border: none;
	background: white;
	line-height: 90rpx;
}