.container {
	margin-bottom: 86rpx;
}

.add-new-address {
	width: 100%;
	height: 85rpx;
	position: fixed;
	bottom: 0;
	left: 0;
	font-size: 26rpx;
	border-top: 1rpx solid rgb(238,238,238);
	background: white;
}

.add-btn {
	width: 44rpx;
	height: 44rpx;
	/* border-radius: 50%; */
	color: white;
	text-align: center;
	line-height: 40rpx;
	float: left;
	/* background: rgb(171,149,108); */
	margin-left: 20rpx;
	margin-top: 21rpx;
}

.add-text {
	width: 300rpx;
	height: 75rpx;
	float: left;
	margin-left: 20rpx;
	line-height: 85rpx;
}

.address-item {
	position: relative;
	width: 100%;
	height: 170rpx;
	font-size: 22rpx;
	border-bottom: 12rpx solid rgb(238, 238, 238);
}

.address-item .show {
	display: block;
	width: 48rpx;
	height: 48rpx;
}

.address-item .hide {
	display: none;
}

.address-choose {
	position: absolute;
	width: 10%;
	height: 100%;
	left: 0;
}

.address-item image{
	position: absolute;
	width: 42rpx;
	height: 42rpx;
	top: 70rpx;
	left: 14rpx;
}

.address-edit {
	position: absolute;
	width: 8%;
	height: 100%;
	right: 15rpx;
}

.address-info {
	position: absolute;
	left: 10%;
	width: 83%;
	height: 100%;
	box-sizing: border-box;
	padding: 10rpx 0rpx;
}

.address-info view {
	position: absolute;
}

