.address-add {
	position: absolute;
	bottom: 0;
	left: 0;
	height: 45px;
	width: 100%;
	border-top: 1px solid gray;
	padding: 10px;
	box-sizing: border-box;
}

.address-img1 {
	width: 20px;
	height: 20px;
	display: block;
	float: left;
	margin-top: 4px;
}

.address-img2 {
	width: 10px;
	height: 16px;
	float: right;
	display: block;
	margin-top: 4px;
}

.address-text {
	font-size: 16px;
	float: left;
	padding-left: 10px;
	margin-top: 4px;
}