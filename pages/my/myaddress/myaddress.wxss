.add-new-address {
	width: 100%;
	height: 85rpx;
	position: fixed;
	bottom: 0;
	left: 0;
	font-size: 26rpx;
	border-top: 1rpx solid gray;
}

.add-btn {
	width: 40rpx;
	height: 40rpx;
	border-radius: 50%;
	color: white;
	text-align: center;
	line-height: 40rpx;
	float: left;
	background: rgb(171,149,108);
	margin-left: 20rpx;
	margin-top: 21rpx;
}

.add-text {
	width: 300rpx;
	height: 75rpx;
	float: left;
	margin-left: 20rpx;
	line-height: 85rpx;
}

.address-item {
	position: relative;
	border-top: 12rpx solid rgb(201, 201, 201);
	width: 100%;
	height: 130rpx;
	font-size: 22rpx;
	border-bottom: 1rpx solid gray;
}

.address-choose {
	position: absolute;
	width: 8%;
	height: 100%;
	left: 0;
}

.address-item image{
	position: absolute;
	width: 30rpx;
	height: 30rpx;
	top: 48rpx;
	left: 16rpx;
}

.address-edit {
	position: absolute;
	width: 8%;
	height: 100%;
	right: 0;
}

.address-info {
	position: absolute;
	left: 8%;
	width: 83%;
	height: 100%;
	box-sizing: border-box;
	padding: 10rpx 15rpx;
}

.address-info view {
	position: absolute;
}

.address-name {
	/* top: 25rpx;
	left: 30rpx; */
	position: static!important;
	float: left;
	margin-top: 15rpx;
	margin-left: 15rpx;
	margin-right: 20rpx;
}

.address-mobile {
	/* top: 25rpx;
	left: 110rpx; */
	position: static!important;
	float: left;
	margin-top: 15rpx;
	margin-left: 20rpx;
}

.address-detail {
	bottom: 25rpx;
	left: 30rpx;
}

.address-post {
	right: 20rpx;
	top: 25rpx;
}