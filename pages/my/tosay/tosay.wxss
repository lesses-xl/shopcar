.say-wrap {
	text-align: center;
	width: 100%;
	height: 420rpx;
	box-sizing: border-box;
	padding: 25rpx 20rpx;
	font-size: 28rpx;
	border-bottom: 10rpx solid rgb(222, 222, 222);
	position: relative;
}

.say-wrap>view {
	position: absolute;
	right: 10rpx;
	bottom: 10rpx;
	font-size: 26rpx;
	color: rgb(200,200,200);
}

.say-wrap textarea {
	width: 100%;
	height: 100%;
	text-align: left;
}

.to-update {
	width: 100%;
	font-size: 28rpx;
	height: 90rpx;
	line-height: 90rpx;
	position: fixed;
	bottom: 0;
	left: 0;
	border-radius: 0;
	background: rgb(171, 149, 108);
	color: white;
	text-align: center;
}

