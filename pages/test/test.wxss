.addgoods {
	position: fixed;
	bottom: 0rpx;
	transform: translate(0,0rpx);
	/* left: 0; */
	background: #ccc;
	width: 100%;
	/* min-height: 380rpx; */
	height: auto;
	z-index: 1000;
	transition: all .2s linear;
}

/* .addgoods-top {
	transform: translate(0,-380rpx);
} */

.add-top {
	width: 100%;
	height: auto;
	max-height: 490rpx;
	position: absolute;
	bottom: 78rpx;
	/* left: 0; */
	font-size: 24rpx;
	background: #ccc;
}

.add-top-top {
	width: 100%;
	height: 160rpx;
}

.add-top-img {
	width: 110rpx;
	height: 110rpx;
	margin-top: 25rpx;
	margin-left: 20rpx;
}

.add-top-name {
	position: absolute;
	top: 40rpx;
	left: 155rpx;
	font-size: 26rpx;
}

.add-top-price {
	color: red;
	position: absolute;
	top: 90rpx;
	left: 147rpx;
}

.add-top-list {
	width: 100%;
	/* min-height: 280rpx; */
	background: skyblue;
	padding: 10rpx 20rpx;
	box-sizing: border-box;
	/* margin-bottom: 150rpx; */
/* 	position: absolute;
	bottom: 80rpx;
	top: 160rpx;
	left: 0; */
}

.add-top-list .add-top-choose1 {
	width: 100%;
	height: auto;
	margin-bottom: 15rpx;
}

.add-top-list .add-top-choose1 view {
	width: auto;
	padding: 8rpx 12rpx;
	border: 2rpx solid #e3e5e9;
	border-radius: 5rpx;
	display: inline-block;
	margin: 5rpx 10rpx;
}

.add-top-changenumber {
	width: 100%;
	height: 110rpx;
	box-sizing: border-box;
/* 	position: absolute;
	bottom: 0; */
	margin-bottom: 0rpx;
	border-top: 1px solid #e3e5e9;
	background: white;
	position: relative;
}

.add-top-changenumber>text {
	line-height: 110rpx;
	margin-left: 20rpx;
}

.add-top-btn {
	width: 180rpx;
	height: 50rpx;
	position: absolute;
	right: 60rpx;
	top: 36rpx;
}

.add-top-btn view {
	position: absolute;
	width: 60rpx;
	height: 100%;
	display: block;
	line-height: 48rpx;
	text-align: center;
	border: 1rpx solid rgba(0, 0, 0, 0.2);
	top: 0;
	left: 60rpx;
	box-sizing: border-box;
}

.add-top-btn button::after {
	border-radius: 1rpx;
	border: 1rpx solid rgba(0, 0, 0,0.2);
}

.add-top-btn .value {
	left: 59rpx;
	border-left: none;
	border-right: none;
}

.add-top-btn .btn1 {
	left: 0;
	top: 0;
}

.add-top-btn .btn2 {
	left: 117rpx;
	top: 0;
}

.add-bottom {
	width: 100%;
	height: 78rpx;
	background: red;
	position: absolute;
	bottom: 0;
	left: 0;
	text-align: center;
	font-size: 28rpx;
	line-height: 78rpx;
	color: white;
}