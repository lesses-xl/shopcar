.shopcar-no {
  width: 100%;
  height: 350rpx; 
  padding-top: 170rpx;
  box-sizing: border-box;
}

.shopcar-no image {
  display: block;
  width: 110rpx;
  height: 110rpx;
  margin: 0 auto;
  margin-bottom: 10rpx;
}

.shopcar-no text {
  font-size: 26rpx;
  width: 100%;
  height: auto;
  text-align: center;
  margin: 0 auto;
  display: block;
  color: gray;
  margin-bottom: 30rpx;
}

.shopcar-no button {
  margin: 0 auto;
  width: 260rpx;
  box-sizing: border-box;
  padding: 0rpx 15rpx;
  font-size: 24rpx;
  background: #AB956C;
  color: white;
}

.shopcar-have {
  width: 100%;
  min-height: 110rpx;
  font-size: 14rpx;
  margin-bottom: 99rpx;
  box-sizing: border-box;
}

.shopcar-have::webkit-scrollbar{
  display:none
} 

.shopcar-top {
  width: 100%;
  height: 72rpx;
  background: #ECECEC;
  padding: 20rpx;
  line-height: 36rpx;
  font-size: 28rpx;
  color: black;
  box-sizing: border-box;
  position: relative;
}

.reader {
  position: absolute;
  top: 0;
  width: 100rpx;
  height: 72rpx;
  line-height: 70rpx;
  right: -8rpx;
  padding: 0 10rpx;
}

.reader text {
  margin-left: 20rpx;
  color: #B1B1B1;
}

.shopcar-some {
  width: 100%;
  height: auto;
}

.shopcar-one {
  width: 95%;
  height: 220rpx;
  padding: 10rpx 10rpx 10rpx 2rpx;
  box-sizing: border-box;
  position: relative;
  margin-left: 20rpx;
}

.shopcar-choose-big {
  position: absolute;
  width: 70rpx;
  height: 100rpx;
  /* background: black; */
  top: 65rpx;
  left: -15rpx;
}

.shopcar-choose {
  width: 36rpx;
  height: 36rpx;
  border: 1rpx solid #D5D4D4;
  border-radius: 50%;
  position: absolute;
  top: 30rpx;
  left: 16rpx;
}

.shopcar-choose image {
  width: 36rpx;
  height: 36rpx;

}

.shopcar-img {
  position: absolute;
  width: 170rpx;
  height: 170rpx;
  border: 1rpx solid #D5D4D4;
  top: 24rpx;
  left: 62rpx;
}

.shopcar-name {
  position: absolute;
  height: 50rpx;
  word-break: keep-all;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  line-height: 50rpx;
  font-size: 26rpx;
  top: 35rpx;
  left: 270rpx;
}

.shopcar-price {
  position: absolute;
  width:200rpx;
  height:60rpx;
  color:red;
  font-size:28rpx;
  bottom: 18rpx;
  left: 266rpx;
}

.shopcar-change {
  width:180rpx;
  height:44rpx;
  font-size: 32rpx;
  position: absolute;
  bottom: 34rpx;
  left: 420rpx;
}

.shopcar-change view {
  float: left;
  box-sizing: border-box;
  border: 1rpx solid #D5D4D4;
  text-align: center;
  line-height: 38rpx;
  height: 44rpx;
}

.shopcar-change .shopcar-sub {
  width: 54rpx;
  z-index: 50;
}

.shopcar-change .shopcar-num {
  width: 64rpx;
  border-left: none;
  border-right: none;
  margin-left: -1rpx;
  font-size: 28rpx;
  z-index: 40;
}

.shopcar-change .shopcar-add {
  float: left;
  width: 54rpx;
  margin-left: -1rpx;
  z-index: 50;
}

.shopcar-bottom {
  color: white;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  box-sizing: border-box;
  padding: 20rpx;
  border-top: 1rpx solid #D5D4D4;
  background: #AB956C;
  font-size: 28rpx;
  overflow: hidden;
}

.shopcar-chooseall {
  width: 80rpx;
  height: 90rpx;
  margin: 0;
  margin-top: -28rpx;
  border-radius: 0;
  box-sizing: border-box;
  text-align: center;
  border: none;
}

.shopcar-chooseall .chooseall-sm {
  width: 40rpx;
  height: 40rpx;
  border: 1px solid white;
  margin: 22rpx auto;
  border-radius: 50%;
}

.shopcar-chooseall .chooseall-sm image {
  width: 40rpx;
  height: 40rpx;
}

.active {
  border-color: rgb(230,67,64)!important;
}

.current {
  border-color: #9F9D9D!important;
}

.shopcar-choosetext {
  line-height: 50rpx;
  margin-left: 90rpx;
}

.shopcar-delete {
  position: absolute;
  top: 28rpx;
  left: 250rpx;
}

.shopcar-allprice {
  width:190rpx;
  height:40rpx;
  position: absolute;
  top: 26rpx;
  right: 50rpx;
}

.oneprice {
  position: absolute;
  top: 96rpx;
  font-size: 24rpx;
  left: 270rpx;
}

.shopcar-pay {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: 26rpx;
  right: 50rpx;
}

.shopdiv {
  border-bottom: 1px solid #dfdfdf;
}

.shopcar-border {
  width: 2rpx;
  height: 36rpx;
  background: white;
  position: absolute;
  top: 28rpx;
  right: 280rpx;
}

.shopcar-delone {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  font-size: 24rpx;
  top: 88rpx;
  right: 10rpx;
  color: red;
  line-height: 50rpx;
}

.buy {
  position: absolute;
  top: 0;
  right: 0;
  width: 150rpx;
  height: 90rpx;
}