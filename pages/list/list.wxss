.container {
	position: fixed;
	width: 100%;
	height: 100%;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
}

.search-right {
	position: absolute;
	width: 80rpx;
	height: 90%;
	top: 0rpx;
	right: 0;
	line-height: 46rpx;
}

.list-wrap {
	display: flex;
	width: 100%;
	/* height: 90%; */
	box-sizing: border-box;
	position: fixed;
	top: 58rpx;
	left: 0;
	bottom: 0;
	right: 0;
	margin-top: 22rpx;
}

.scroll-left {
	width: 20%;
	/* margin-top: 16rpx; */
	border-top: 1rpx solid rgb(223,224,227);
	border-right: 1rpx solid rgb(223,224,227);
	transition: all .2s;
	height: 100%;
}

.scroll-right {
	width: 80%;
	/* margin-top: 16rpx; */
	border-top: 1rpx solid rgb(223,224,227);
	transition: all .2s;
	height: 100%;
}

.list {
	/* width: 20%; */
	box-sizing: border-box;
	width: 100%;
	/* min-height: 1420rpx; */
	margin-top: 15rpx;
	padding: 0 0 20rpx 0;
}

.list-item {
	width: 100%;
	height: auto;
	line-height: 50rpx;
	box-sizing: border-box;
	font-size: 28rpx;
	text-align: center;
	margin-top: 40rpx;
	transition: all .1s;
	padding: 10rpx 0;
}


.active {
	border-left: 5rpx solid rgb(180,45,40);
	color: #ab2b2b;
	box-sizing: border-box;
}

.list-show {
	height: 1000rpx;
	width: 100%;
	margin-top: 15rpx;
	position: relative;
}

.list-show .list-img {
	width: 90%;
	display: block;
	margin: 20rpx auto;
	height: 250rpx;
	background: gray;
	border-radius: 10rpx;
}

.list-show .list-text {
	font-size: 24rpx;
	text-align: center;
	display: block;
	color: rgb(185, 170, 141);
}

.list-show .list-div {
	display: flex;
	width: 100%;
	margin: 20rpx auto;
	margin-left: -1rpx;
	margin-bottom: 5rpx;
	justify-content: left;
	align-items: center;
	flex-wrap: wrap;
	border-left: 1rpx solid rgb(223,224,227);
}

.list-show .list-div .list-goods {
	width: 110rpx;
	height: 160rpx;
	font-size: 22rpx;
	padding: 30rpx 45rpx;
	text-align: center;
	color: rgb(81, 81, 90);
}

.list-show .list-div image {
	width: 110rpx;
	height: 110rpx;
	border-radius: 50%;
}

