.add-top-btn .value {
	left: 59rpx;
	border-left: none;
	border-right: none;
}

.add-top-btn .btn1 {
	left: 0;
	top: 0;
}

.add-top-btn .btn2 {
	left: 117rpx;
	top: 0;
}

.add-bottom {
	width: 100%;
	height: 78rpx;
	background: red;
	position: absolute;
	bottom: 0;
	left: 0;
	text-align: center;
	font-size: 28rpx;
	line-height: 78rpx;
	color: white;
}



