/* 遮罩 */
.mask {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: rgba(0,0,0,0.6);
	z-index: 500;
}

.addgoods {
	position: fixed;
	bottom: -380rpx;
	transform: translate(0,0rpx);
	left: 0;
	background: white;
	width: 100%;
	height: 380rpx;
	z-index: 1000;
	transition: all .2s linear;
}

.addgoods-top {
	transform: translate(0,-380rpx);
}

.add-top {
	width: 100%;
	min-height: 290rpx;
	position: absolute;
	top: 0;
	left: 0;
	font-size: 24rpx;
}

.add-top-img {
	width: 110rpx;
	height: 110rpx;
	margin-top: 25rpx;
	margin-left: 20rpx;
}

.add-top-name {
	position: absolute;
	top: 40rpx;
	left: 155rpx;
	font-size: 26rpx;
}

.add-top-price {
	color: red;
	position: absolute;
	top: 90rpx;
	left: 147rpx;
}

.add-top-changenumber {
	width: 100%;
	height: 110rpx;
	box-sizing: border-box;
	/* border: 1px solid black; */
	position: absolute;
	bottom: 0;
}

.add-top-changenumber>text {
	line-height: 110rpx;
	margin-left: 20rpx;
}

.add-top-btn {
	width: 180rpx;
	height: 50rpx;
	position: absolute;
	right: 60rpx;
	top: 36rpx;
}

.add-top-btn view {
	position: absolute;
	width: 60rpx;
	height: 100%;
	display: block;
	line-height: 48rpx;
	text-align: center;
	border: 1rpx solid rgba(0, 0, 0, 0.2);
