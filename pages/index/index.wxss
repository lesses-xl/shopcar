.index {
	height: auto;
}

swiper {
	height: 360rpx;
}

.index-center-text {
	font-size: 30rpx;
	text-align: center;
	display: block;
	width: 100%;
	height: 90rpx;
	line-height: 90rpx;
	color: #AB956C;
}

.theme-view {
	height: 670rpx;
	width: 100%;
	/* display: flex; */
}

.theme-top {
	width: 100%;
	height: 320rpx;
}

.theme-view-left {
	width: 50%;
	height: 320rpx;
	float: left;
}

.theme-view-right {
	width: 50%;
	height: 320rpx;
	float: right;
}

.theme-view-bottom {
	width: 100%;
	height: 350rpx;
}

.half-img {
	width: 100%;
	height: 320rpx;
	float: left;
	box-sizing: border-box;
}

.one-img {
	width: 100%;
	height: 350rpx;
}

.new-goods {
	width: 95%;
	height: auto;
	margin: 0 auto;
}

.new-goods-one {
	width: 350rpx;
	height: 350rpx;
	float: left;
	text-align: center;
	background: rgb(246, 246, 246);
	margin-bottom: 15rpx;
	/* margin-right: 10rpx; */
}

.new-goods-one image {
	width: 200rpx;
	height: 200rpx;
	margin: 0 auto;
	border-radius: 50%;
	display: block;
	margin-top: 25rpx;
	margin-bottom: 10rpx;
}

.new-goods-one text {
	width: 200rpx;
	height: 50rpx;
	font-size: 26rpx;
	text-align: center;
	display: block;
	margin: 5rpx auto;
}

.new-goods-one:nth-of-type(even) {
	float: right;
}

