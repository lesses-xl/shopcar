/* 地址样式 */

.address-confirm {
	width: 100%;
	height: 60rpx;
	line-height: 60rpx;
	font-size: 26rpx;
	text-align: left;
	padding-left: 20rpx;
	padding-bottom: 5rpx;
	border-bottom: 2rpx solid rgb(220,220,220);
}

.add-new-address {
	width: 100%;
	height: 85rpx;
	position: fixed;
	bottom: 0;
	left: 0;
	font-size: 26rpx;
	border-top: 1rpx solid gray;
}

.add-btn {
	width: 40rpx;
	height: 40rpx;
	border-radius: 50%;
	color: white;
	text-align: center;
	line-height: 40rpx;
	float: left;
	background: rgb(171,149,108);
	margin-left: 20rpx;
	margin-top: 21rpx;
}

.add-text {
	width: 300rpx;
	height: 75rpx;
	float: left;
	margin-left: 20rpx;
	line-height: 85rpx;
}

.address-item {
	position: relative;
	width: 100%;
	height: 160rpx;
	font-size: 22rpx;
	border-bottom: 12rpx solid rgb(238, 238, 238);
}

.address-item .show {
	display: block;
}

.address-item .hide {
	display: none;
}

.address-choose {
	position: absolute;
	width: 8%;
	height: 100%;
	left: 0;
}

.address-item image{
	position: absolute;
	width: 20rpx;
	height: 30rpx;
	top: 48rpx;
	left: 16rpx;
}

.address-edit {
	position: absolute;
	width: 8%;
	height: 100%;
	right: 0;
}

.address-info {
	position: absolute;
	/* left: 8%; */
	width: 83%;
	height: 100%;
	box-sizing: border-box;
	padding: 10rpx 15rpx;
}

.address-info view {
	position: absolute;
}

.address-name {
	position: static!important;
	float: left;
	margin-top: 15rpx;
	margin-left: 15rpx;
	margin-right: 20rpx;
}

.address-mobile {
	position: static!important;
	float: left;
	margin-top: 15rpx;
	margin-left: 20rpx;
}

.address-detail {
	bottom: 25rpx;
	left: 30rpx;
}

.address-post {
	position: absolute;
	top: 67rpx;
	left: 29rpx;
}


.container .address-noaddress {
	line-height: 160rpx;
	font-size: 26rpx;
	text-align: center;
}


/* 商品信息 */
.orderlist {
	margin-bottom: 65rpx;
    width: 100%;
    height: auto;
    font-size: 26rpx;
    color: rgb(186, 186, 186);
}

.paylist {
    height: 280rpx;
    width: 100%;
    border-bottom: 15rpx solid rgb(239,239,239);
}

.ordernumber {
    width: 92%;
    margin: 0 auto;
    padding: 15rpx 0;
    border-bottom: 2rpx solid rgb(237,237,237);
}

.paylist image {
    width: 150rpx;
    height: 150rpx;
    margin-top: 2rpx;
}

.orderwrap {
    position: relative;
    width: 92%;
    margin: 0 auto;
    height: 190rpx;
    box-sizing: border-box;
    padding: 15rpx 0;
    border-bottom: 2rpx solid rgb(237,237,237);
}

.orderwrap-left {
    width: 20%;
    float: left;
    /* border: 2rpx solid rgb(186, 186, 186); */
}

.orderwrap-right {
    float: left;
    width: 70%;
    height: 80%;
    margin-top: 20rpx;
    margin-left: 30rpx;
}

.orderwrap-name {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
}

.orderwrap-num {
    width: 100%;
    height: 50rpx;
    line-height: 50rpx;
}

.orderwrap-wait {
    /* width: 100rpx; */
    font-size: 22rpx;
    height: 50rpx;
    line-height: 50rpx;
    position: absolute;
    right: 5rpx;
    top: 62rpx;
    color: rgb(181, 47, 46);
}

.orderwrap-money {
   position: absolute;
   height: 50rpx;
   line-height: 50rpx;
   top: 100rpx;
   right: 5rpx;
   font-size: 24rpx;     
}

.orderpay {
    width: 92%;
    height: 75rpx;
    margin: 0 auto;
    color: black;
    line-height: 75rpx;
    font-size: 28rpx;
}

.orderpay text {
    float: left;
}

.orderpay button {
    float: right;
    width: 150rpx;
    height: 55rpx;
    line-height: 55rpx;
    background: rgb(181, 47, 46);
    background: transparent;
    /* color: white; */
    border: none;
    font-size: 24rpx;
    border-radius: 6rpx;
    margin-top: 12rpx;
    border: 1px solid white;
}

.orderpay view {
    float: right;
    width: 150rpx;
    height: 55rpx;
    line-height: 55rpx;
    font-size: 24rpx;
    border-radius: 6rpx;
    margin-top: 12rpx;
}

.complete .paylist {
    height: 330rpx;
}

/*底部提交订单*/

.pay {
	position: fixed;
	bottom: 0;
	border-bottom: 1px solid gray;
	width: 100%;
	height: 80rpx;
	font-size: 26rpx;
	background: rgb(239,239,239);
}

.pay .allprice {
	position: absolute;
	color: rgb(181, 47, 46);
	width: 220rpx;
	height: 100%;
	top: 0;
	line-height: 80rpx;
	left: 35rpx;
}

.pay .topay {
	position: absolute;
	width: 175rpx;
	height: 100%;
	line-height: 80rpx;
	color: white;
	background: rgb(181, 47, 46);
	text-align: center;
	right: 0;
	top: 0;
}

.pay .tocancel {
	position: absolute;
	width: 175rpx;
	height: 100%;
	line-height: 80rpx;
	color: white;
	top: 0;
	right: 175rpx;
	text-align: center;
	background: rgb(171, 149, 108);
}