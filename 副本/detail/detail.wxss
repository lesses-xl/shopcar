.top-img {
	width: 260rpx;
	height: 260rpx;
	display: block;
	margin: 50rpx auto 80rpx auto;
}

.detail-top {
	position: relative;
	/* text-align: center; */
}

.top-btn {
	position: fixed;
	bottom: 0;
	left: 0;
	width: 100%;
	height: 100rpx;
	font-size: 26rpx;
	color: white;
	background: #AB956C;
	/* border-radius: 50rpx; */
	margin: 0 auto;
	line-height: 100rpx;
	display: flex;
	justify-content: center;
	align-items: center;
}

.cart-img {
	width: 40rpx;
	height: 40rpx;
	float: right;
	margin-top: 28rpx;
	margin-right: 50rpx;
}

.top-left {
	width: 50%;
	height: 100%;
	box-sizing: border-box;
	position: relative;
	box-sizing: border-box;
}

.top-border {
	width: 2rpx;
	height: 30rpx;
	background: white;
	margin-left: -50rpx;
}

.top-right {
	width: 45%;
	height: 100%;
	box-sizing: border-box;
}

.left-name {
	margin-left: 65rpx;
}

.left-num {
	margin-left: 40rpx;
}

.left-icon {
	position: absolute;
	top: 44rpx;
	font-size: 42rpx;
	right: 70rpx;
	width: 50rpx;
	height: 50rpx;
	display: block;
	transform: rotate(90deg);
}

.top-cart {
	margin-left: 70rpx;
}

.goods-center {
	text-align: center;
}

.goods-have {
	font-size: 24rpx;
	margin-top: 50rpx;
	margin-bottom: 20rpx;
}

.goods-name {
	font-size: 38rpx;
	margin-bottom: 20rpx;
}

.goods-money {
	font-size: 34rpx;
	margin-bottom: 35rpx;
}

.detail-border {
	width: 100%;
	height: 25rpx;
	background: rgb(249,249,249);
}

.cart-big {
	width: 70rpx;
	height: 70rpx;
	position: absolute;
	top: -5rpx;
	right: 10rpx;
	z-index: 10;
	transition: all 1s ease-in-out;
}

.cart-num {
	position: absolute;
	width: 30rpx;
	height: 30rpx;
	background: #AB956C;
	border-radius: 50%;
	font-size: 20rpx;
	color: white;
	text-align: center;
	line-height: 30rpx;
	top: 4rpx;
	right: 62rpx;
	z-index: 20;
}

.cart-num-big {
	width: 60rpx;
	height: 60rpx;
/* 	right: 4rpx;
	top: -5rpx; */
	
}

.cart-view {
	position: absolute;
	width: 80rpx;
	height: 80rpx;
	top: 17rpx;
	right: 30rpx;
}